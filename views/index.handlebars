<div class="container">
    <div class="jumbotron text-center">
        <h1 id="title">Eat Da Burger!</h1>
        <img src = "/assets/img/cheeseburger.png" alt="Yummy Cheeseburger" height="200px">
        <h3 class="mt-4">I know you're hungry! Tell me what burger you would like to eat!
            <br>
         Or click on one that's already been created on the left!</h3>
    </div>
    <div class="row">
        <div class="col-4 task" id="burgers">
            <h1>Burgers to Eat!</h1>
            <hr>
            {{!-- burgers to eat go here --}}
                {{#each burger_data}}
                    {{#unless this.devoured}}
                        <h3>{{this.burger_name}}</h3>
                        <form class="eatMe">
                    {{!-- <a class="btn btn-primary fas fa-hamburger" href="/api/burger/1/{{id}}"> &nbsp;Eat this Burger</a> --}}
                            <input type="hidden" class="burger_id" type="text" value={{this.id}}>
                            <button type="submit" class="fas fa-hamburger"> &nbsp; Eat this burger!</button>
                        </form>
                        <br>
                    {{/unless}}
                {{/each}}
        </div>

        <div class="col-4 offset-4" id="devoured">
            <h1>Devoured Burgers</h1>
            <hr>
            <ul>
                {{#each burger_data}}
                    {{#if this.devoured}}
                        <h3>{{this.burger_name}}</h3>
                        <br>
                    {{/if}}
                {{/each}}
            </ul>
            {{!-- burgers that have been devoured go here --}}
        </div>
    </div>
    <div class="row">
        <div class="col-5 offset-3 text-center">
            What burger would you like to eat?
            <form action="/burgers/create" method="POST">
                
                <input type="text" class="form-control" id="newBurger" name="burger_name">
                <br>
                <button type="submit" id="submitBurger">Submit New Burger</button>
            </form>
        </div>
    </div>
</div>